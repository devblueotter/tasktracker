<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:color="@color/color_connect_facebook" android:width="1dip"/>
            <gradient android:angle="-90" android:endColor="@color/color_connect_facebook" android:startColor="@color/color_connect_facebook"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:color="@color/com_fb_button_background_color_focused" android:width="1dip"/>
            <solid android:color="@color/com_fb_button_background_color_focused"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:color="@color/color_connect_facebook" android:width="2dip"/>
            <gradient android:angle="-90" android:endColor="@android:color/white" android:startColor="@android:color/white"/>
        </shape>
    </item>
</selector>